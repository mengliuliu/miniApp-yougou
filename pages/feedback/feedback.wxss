page {
  background-color: #eee;
}
.feedback .feedback_main {
  font-size: 26rpx;
  padding: 0 20rpx;
}
.feedback .feedback_main .main_title {
  padding: 20rpx;
}
.feedback .feedback_main .main_tips {
  display: flex;
  flex-wrap: wrap;
}
.feedback .feedback_main .main_tips .tips_item {
  width: 30%;
  height: 60rpx;
  background-color: #fff;
  margin: 10rpx 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.feedback .feedback_main .main_content {
  background-color: #fff;
}
.feedback .feedback_main .main_content textarea {
  padding: 10rpx;
}
.feedback .feedback_main .main_content .content_tool {
  display: flex;
  flex-wrap: wrap;
}
.feedback .feedback_main .main_content .content_tool button {
  margin: 0 0 10rpx 10rpx;
  width: 90rpx;
  height: 90rpx;
  font-size: 60rpx;
  background-color: #eee;
  font-weight: 300;
  display: flex;
  justify-content: center;
  align-items: center;
}
.feedback .feedback_main .main_content .content_tool .upimg {
  margin-left: 20rpx;
}
.feedback .feedback_main .main_btn button {
  color: #fff;
  background-color: var(--themeColor);
  margin: 20rpx 0;
  padding: 10rpx;
  float: right;
  width: 20vw;
}
