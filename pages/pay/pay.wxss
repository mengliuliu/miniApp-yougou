page {
  padding-bottom: 90rpx;
}
.cart .cart_info {
  display: flex;
  padding: 10rpx;
}
.cart .cart_info .info_left {
  flex: 5;
}
.cart .cart_info .info_right {
  text-align: right;
  flex: 3;
}
.cart .cart_title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--themeColor);
  padding: 10rpx;
  border-top: 2rpx solid red;
  border-bottom: 2rpx solid red;
}
.cart .cart_good .good_item {
  display: flex;
  padding: 10rpx 5rpx;
  border-bottom: 3rpx solid #ccc;
}
.cart .cart_good .good_item .item_img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart .cart_good .good_item .item_img image {
  width: 80%;
}
.cart .cart_good .good_item .item_info {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart .cart_good .good_item .item_info .info_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.cart .cart_good .good_item .item_info .info_number {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cart .cart_good .good_item .item_info .info_number .number_price {
  color: var(--themeColor);
}
.cart .cart_good .good_item .item_info .info_number .number_num {
  display: flex;
  text-align: center;
}
.cart .cart_good .good_item .item_info .info_number .number_num .num_num {
  line-height: 55rpx;
  width: 55rpx;
  height: 55rpx;
}
.cart .cart_bottom {
  display: flex;
  border-top: 2rpx solid #ccc;
  border-bottom: 2rpx solid #ccc;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 90rpx;
  width: 100%;
  background-color: #fff;
}
.cart .cart_bottom .bottom_mid {
  flex: 5;
  text-align: right;
  padding-right: 10rpx;
}
.cart .cart_bottom .bottom_mid .mid_total text {
  color: var(--themeColor);
  font-size: 32rpx;
  font-weight: 600;
}
.cart .cart_bottom .bottom_mid .mid_fare {
  font-size: 28rpx;
}
.cart .cart_bottom .bottom_right {
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--themeColor);
  color: white;
  font-weight: 600;
}
