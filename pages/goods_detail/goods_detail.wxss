page {
  padding-bottom: 90rpx;
}
.detail swiper {
  height: 65vw;
}
.detail swiper swiper-item {
  text-align: center;
}
.detail swiper swiper-item image {
  width: 50%;
}
.detail .detail_info .info_price {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--themeColor);
  padding: 15rpx;
}
.detail .detail_info .info_intro {
  border-top: 5rpx solid #dedede;
  border-bottom: 5rpx solid #dedede;
  display: flex;
}
.detail .detail_info .info_intro .intro_left {
  flex: 5;
  color: #000;
  padding: 0 10rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.detail .detail_info .info_intro .intro_right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1rpx solid #000;
}
.detail .detail_info .info_intro .intro_right .icon-shoucang1 {
  color: var(--themeColor);
}
.detail .detail_imgtext .imgtext_tit {
  font-size: 32rpx;
  color: var(--themeColor);
  font-weight: 600;
  padding: 20rpx;
}
.detail .detail_btmtab {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 90rpx;
  width: 100%;
  background-color: #fff;
  border-top: 1rpx solid #ccc;
}
.detail .detail_btmtab .btmtab_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  position: relative;
}
.detail .detail_btmtab .btmtab_item button {
  position: absolute;
  left: 0;
  bottom: 0;
  height: 100%;
  width: 100%;
  opacity: 0;
}
.detail .detail_btmtab .btmtab_item .add_car {
  font-size: 30rpx;
  font-weight: 600;
  color: white;
  background-color: #ffa500;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}
.detail .detail_btmtab .btmtab_item .imm_buy {
  font-size: 30rpx;
  font-weight: 600;
  color: white;
  background-color: var(--themeColor);
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}
